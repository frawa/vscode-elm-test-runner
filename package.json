{
    "name": "vscode-elm-test-runner",
    "displayName": "elm-test-runner",
    "description": "Run elm tests",
    "version": "0.0.2",
    "publisher": "vsce",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:elmTestRunner"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "elmTestRunner.run",
                "title": "Run Elm Tests",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            },
            {
                "command": "elmTestRunner.diff",
                "title": "Difference",
                "icon": {
                    "light": "resources/Red_x.svg",
                    "dark": "resources/Red_x.svg"
                }
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "elmTestRunner",
                    "name": "Elm Test Runner"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "elmTestRunner.run",
                    "when": "view == elmTestRunner",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "elmTestRunner.diff",
                    "when": "view == elmTestRunner && viewItem == canDiff",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "utest": "ts-mocha -p ./ src/utest/**/*.test.ts",
        "utest-watch": "ts-mocha --watch -p ./ src/utest/**/*.test.ts"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.56",
        "chai": "^4.1.2",
        "ts-mocha": "^1.1.0",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.13"
    },
    "dependencies": {
        "@types/ramda": "^0.25.19",
        "jsonc-parser": "^0.4.2",
        "ramda": "^0.25.0"
    }
}
